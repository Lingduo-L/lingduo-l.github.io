# frozen_string_literal: true

source "https://rubygems.org"

gem "kramdown-parser-gfm" # 用于 GitHub 风格的 Markdown 解析器

gem "jekyll", "~> 3.9" # 使用 Jekyll 3.9，与 no-style-please 主题兼容
gem "jekyll-sass-converter", "~> 1.0" # Jekyll 3.9 的 Sass 转换器
gem "webrick" # 提供 Jekyll 本地服务器所需的 Web 服务支持

gem "bundler" # Bundler 工具

# 添加所有可能缺失的 Ruby 标准库
gem "logger"      # 日志工具
gem "csv"         # 处理 CSV 文件
gem "base64"      # 编码/解码工具
gem "bigdecimal"  # 高精度数字运算
gem "psych"       # YAML 解析器
gem "time"        # 时间处理
gem "json"        # JSON 解析器

# 添加常见的 Jekyll 插件
gem "jekyll-feed", "~> 0.12"
gem "jekyll-seo-tag", "~> 2.7"
gem "jekyll-paginate", "~> 1.1"
gem "jekyll-sitemap", "~> 1.4"
gem "jekyll-archives", "~> 2.2"